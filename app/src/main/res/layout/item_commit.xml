<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_small"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/padding_small"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/state_white_orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commitPicture"
            android:layout_width="@dimen/item_commit_image_width_height"
            android:layout_height="@dimen/item_commit_image_width_height"
            android:padding="@dimen/padding_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/nameTextView"
                style="@style/AppTheme.CommitTextView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_margin="@dimen/padding_small"
                android:background="@color/material_blue_grey_800" />

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/authorTextView"
                style="@style/AppTheme.CommitTextView" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/AppTheme.CommitTextView" />

            <TextView
                android:id="@+id/statusTextView"
                style="@style/AppTheme.CommitTextView"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>